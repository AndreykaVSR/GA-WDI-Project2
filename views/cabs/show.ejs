<%- include('../partials/template') %>
    <h1>Selected Vehicle Details</h1>
        <table id = "tblSlctCabs">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Frame Type</th>
                    <th>Serial Number</th>
                    <th>Capacity</th>
                    <th>E-Assist</th>
                    <th>Canopy</th>
                    <th>Rented</th>
                    <th>Drivers First Name</th>
                    <th>Drivers Last Name</th>
                </tr>
            </thead>
        <tbody id = "tblBodyCabs">
            <tr>
                <td></td>
                <td><%= cab.make %></td>
                <td><%= cab.model %></td>
                <td><%= cab.year %></td>
                <td><%= cab.frameType %></td>
                <td><%= cab.serialNum %></td>
                <td><%= cab.capacity %></td>
                <td><%= cab.eAssist %></td>
                <td><%= cab.canopy %></td>
                    <% if (cab.rented ) { %>
                <td style = "color: rgb(55, 102, 63)"> <%= cab.rented %> </td>
                    <% } else { %>
                <td><%= cab.rented %> </td>
                    <% } %>
                <td><%= cab.driverFirst %></td>
                <td><%= cab.driverLast %></td>
            </tr>
            </tbody>
        </table>
        <div>
            <form method="POST" action="/cabs/<%= cab._id %>?_method=DELETE">
                <input id = "btnCabDlt" type = "submit" value = "Delete Cab">
            </form>
        </div>
<%- include('../partials/footer') %>